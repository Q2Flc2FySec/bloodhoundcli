{
  "version": 1,
  "bind_addr": "0.0.0.0:7575",
  "metrics_port": ":2112",
  "root_url": "http://127.0.0.1:7575/",
  "work_dir": "/opt/bloodhound/work",
  "log_level": "INFO",
  "log_path": "bloodhound.log",
  "features": {
    "enable_auth": true
  },
  "tls": {
    "cert_file": "",
    "key_file": ""
  },
  "database": {
    "connection": "user=postgres password=bloodhound dbname=bloodhound host=postgres"
  },
  "neo4j": {
    "connection": "neo4j://neo4j:bloodhound@neo4j:7687/"
  },
  "collectors_base_path": "/etc/bloodhound/collectors",
  "default_admin": {
    "principal_name": "admin",
    "first_name": "Bloodhound",
    "last_name": "Administrator",
    "email_address": "admin@bloodhound"
  }
}
